---
import { Image } from "astro:assets";
import arrow from "../../public/images/back-arrow.svg";
---

<div class="previous-page-bar">
  <Image src={arrow} alt="deal" />
  <span>Current page</span>
</div>

<style>
  .previous-page-bar {
    width: 375px;
    height: 55px;
    padding: 16px 0px;
    display: flex;
    align-items: center;
    background: var(--white);
    box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.12);
  }

  .previous-page-bar img {
    margin-left: 10px;
  }
  .previous-page-bar span {
    color: var(--black);
    /* text-align: center; */
    font-size: 16px;
    font-weight: 500;
    line-height: 22px;
    margin: 0 auto;
  }
</style>
